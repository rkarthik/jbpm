      <artifactId>commons-fileupload</artifactId>
    </dependency>
    <dependency>
      <groupId>com.allen-sauer.gwt.dnd</groupId>
      <artifactId>gwt-dnd</artifactId>
      <version>3.1.2</version>
    </dependency>
    <dependency>
      <groupId>com.yesmail</groupId>
